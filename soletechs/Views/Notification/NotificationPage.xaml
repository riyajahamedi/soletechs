<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="soletechs.Views.NotificationPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}"
    Icon="{Binding CurrentIcon}">
    <ContentPage.Content>
        <StackLayout
            Margin="16"
            Orientation="Vertical"
            Spacing="16">
            <ListView x:Name="notification_list" ItemsSource="{Binding Notifications, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Text="Title" />
                                <Label Grid.Row="1" Text="Text" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="UTF-8" ?>
<ViewCell
    x:Class="soletechs.CustomViews.NotificationCell"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:soletechs.CustomViews">
    <ViewCell.View>
        <local:BoxFrame
            Margin="4"
            BorderColor="{StaticResource Accent}"
            CornerRadius="3">
            <Grid Padding="-5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackLayout Orientation="Horizontal">
                    <Label
                        HorizontalOptions="StartAndExpand"
                        Text="Title"
                        TextColor="DeepSkyBlue" />
                    <Button HorizontalOptions="EndAndExpand" Image="delete.png" />
                </StackLayout>
                <Grid
                    Grid.Row="1"
                    Padding="-1,0,0,3"
                    HorizontalOptions="Start">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <local:FieldItemView
                        Title="Created Date"
                        HorizontalOptions="Start"
                        Text="02.1.1"
                        TextColor="#FF333333"
                        TitleColor="DarkGray" />
                    <local:FieldItemView
                        Title="Type"
                        Grid.Column="1"
                        Margin="15,0,0,0"
                        HorizontalOptions="Start"
                        Text="Information"
                        TextColor="#FF333333"
                        TitleColor="DarkGray" />
                    <local:FieldItemView
                        Title="Company"
                        Grid.Column="2"
                        Margin="20,0,0,0"
                        HorizontalOptions="Start"
                        Text="Soletechs"
                        TextColor="#FF333333"
                        TitleColor="DarkGray" />
                </Grid>
            </Grid>
        </local:BoxFrame>
    </ViewCell.View>
</ViewCell>